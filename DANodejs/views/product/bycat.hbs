                      $("#"+pro[i].idSanPham+"").html("new");
                }*/

       
      });
    $('button').on('click', function() {
      var id = $(this).data('id');
      $('#txtloaibtn').val(id);
      $('#frmSapXep').submit();
    });
  </script>