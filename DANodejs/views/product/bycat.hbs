{{#section 'title'}}
	Danh sách sản phẩm
{{/section}}

{{#if noProducts }}
	KHÔNG CÓ SẢN PHẨM THOẢ YÊU CẦU!
{{else}}
	<div class="row">
         {{#each products }}
        
          <div class="col-sm-4">
            <div class="panel panel-primary">
              <div class="panel-heading"><a href="ChiTietSanPham.html"><span style="color:white"><strong>{{tenSanPham}}</strong></span></a></div>
              <div class="panel-body"><img src="https://placehold.it/150x80?text=IMAGE" class="img-responsive" style="width:100%" alt="Image">
                  <div class="row">
                    <div class="col-sm-6">
                      <div>Giá đấu hiện tại : {{giaHienTai}} </div>
                      <div>Giá mua ngay : {{giaMuaNgay}} </div>
                    </div>
                    <div class="col-sm-6">
                      <div>Lượt Bid : {{luotBid}}</div>
                      <div>Thời điểm kết thúc : {{thoiDiemKetThuc}}</div>
                    </div>
                  </div>  
              </div>
              <div class="panel-footer text-center">
                 <a href="" type="button" data-toggle="modal" data-target="#ModalBiding" class="bidBtn"> <img src="/image/bid_icon.png" style="width:50px; height:50px"> </a>
                <button  type="button" class="btn btn-danger btn-lg cart">&nbsp;Thêm vào Giỏ hàng&nbsp;</button> 
              </div>
            </div>
         </div> 
       
         {{/each}}

       </div>


        <div class="modal fade" id="ModalBiding" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                                    <h4 class="modal-title" id="BuyLabel">Đấu giá</h4>
                                                </div>
                                                <div class="modal-body">
                                                    <form class="form-inline" id="auction-form">
                                                        <div class="form-group">
                                                            <label class="sr-only" for="textFieldBidAmount">Số tiền đấu giá (VND)</label>
                                                            <div class="input-group">
                                                                <div class="input-group-addon">VND</div>
                                                                <input type="text" class="form-control" id="price" name="BidAmount" placeholder="Amount">
                                                                <div class="input-group-addon">.000</div>
                                                            </div>
                                                        </div>
                                                         <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                                                         <button type="submit" class="btn btn-success">Đấu giá</button>
                                                    </form>
                                                </div>
                                                <div class="modal-footer">
                                                   
                                                </div>
                                            </div>
                                        </div>
                                    </div>
{{/if}}