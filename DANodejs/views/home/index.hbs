    <script type="text/javascript">
    $("#txtname").change(function(){
          var ten= $("#txtname").val();
          $("#btnSearch").attr("href", "/product/timkiem/?ten="+ten);

    });
   $(document).ready(function(){
         var proBid = JSON.parse('{{{json productsBid}}}');
         var proFavor = JSON.parse('{{{json layoutVM.productsFavourite}}}');
         var d = new Date();
          var millisecondsNow=Date.parse(d);
         for(var i=0;i<proBid.length;i++)
         {
                  for(var j=0;j<proFavor.length;j++)
                  {

                    if(proFavor[j].idSanPham == proBid[i].idSanPham){
                       $("#"+proBid[i].idSanPham+"favor").html("Đã yêu thích");
                       $("#"+proBid[i].idSanPham+"favor").removeAttr("href");
                      
                    }
                  }
                var millisecondsthoiDiemDang  = Date.parse(proBid[i].thoiDiemDang);
                var t=(millisecondsNow-millisecondsthoiDiemDang)/60000;
                 
                 if(t<30)
                 {
                      $("#"+proBid[i].idSanPham+"").html("new");
                }
         }
         var proCost = JSON.parse('{{{json productsCost}}}');
         for(var i=0;i<proCost.length;i++)
         {
               
                  for(var j=0;j<proFavor.length;j++)
                  {

                    if(proFavor[j].idSanPham == proCost[i].idSanPham){
                       $("#"+proCost[i].idSanPham+"favor").html("Đã yêu thích");
                       $("#"+proCost[i].idSanPham+"favor").removeAttr("href");
                      
                    }
                  }
                var millisecondsthoiDiemDang  = Date.parse(proCost[i].thoiDiemDang);
                var t=(millisecondsNow-millisecondsthoiDiemDang)/60000;
                
                 if(t<30)
                 {
                      $("#"+proCost[i].idSanPham+"").html("new");
                }
         }
         var proEndTime = JSON.parse('{{{json productsEndTime}}}');
         for(var i=0;i<proEndTime.length;i++)
         {
                 for(var j=0;j<proFavor.length;j++)
                  {

                    if(proFavor[j].idSanPham == proEndTime[i].idSanPham){
                       $("#"+proEndTime[i].idSanPham+"favor").html("Đã yêu thích");
                       $("#"+proEndTime[i].idSanPham+"favor").removeAttr("href");
                      
                    }
                  }
                var millisecondsthoiDiemDang = Date.parse(proEndTime[i].thoiDiemDang);
                var t=(millisecondsNow-millisecondsthoiDiemDang)/60000;
                
                 if(t<30)
                 {
                      $("#"+proEndTime[i].idSanPham+"").html("new");
                }
         }
      });
  </script>